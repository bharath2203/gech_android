        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.NotificationActivity" />
        <activity android:name=".Activities.NotificationDetailActivity" />
        <activity android:name=".Activities.FacultyActivity" />
        <activity android:name=".Activities.FacultyDetailActivity" />
        <activity android:name=".Activities.MainActivity" />
        <activity android:name=".Activities.UserActivity" />
        <activity android:name=".Activities.HomeActivity"></activity>
    </application>

</manifest>